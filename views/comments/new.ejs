<% include ../partials/header %>

<div class="container text">
    <h1 style="text-align:center">Add a comment to <%= campground.name %></h1>
    <div style="margin:35px auto; width: 30%">
        <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="text" name="comment[text]">
                <% const date = new Date() %>
                <input class="form-control" type="hidden" value="<%= date %>"   name="comment[time]">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>